<div data-user-search-target="list">
  <div class="related-users">
    <% if params[:query].present? %>
      <p><%= pluralize users.count, 'user' %> for <code><%= params[:query] %></code></p>
      <div class="users">
        <% users.each do |user| %>
          <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between">
              <%= user.username %>
              <span>
                <% if signed_in? && !Invitation.reacted?(current_user.id, user.id) && current_user != user %>
                  <%= simple_form_for @invitation do |f| %>
                    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
                    <%= f.input :friend_id, as: :hidden, input_html: { value: user.id } %>
                    <button type="submit" class="star-rating">
                      <i class="fa-solid fa-plus"></i>
                    </button>
                  <% end %>
                <% end %>
              </span>
            </li>
          </ul>
        <% end %>
      </div>
    <% else %>
      <div class="row">
        <div class="similar-users">
          <h3>Similar Shelves</h3>
          <ul>
          </ul>
          <ul class="list-unstyled">
            <% @related_users.each do |u| %>
              <li>
                <h3><%= u.username %></h3>
                <span>
                  <% if signed_in? && !Invitation.reacted?(current_user.id, u.id) && current_user != u %>
                    <%= simple_form_for @invitation do |f| %>
                      <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
                      <%= f.input :friend_id, as: :hidden, input_html: { value: u.id } %>
                      <button type="submit"> <i class="fa-solid fa-plus fa-2xs"></i> </button>
                    <% end %>
                  <% end %>
                </span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
