<div class= "profile">
  <div class="text-center">
    <div class="avatar-img">
      <img alt="avatar-img" src="https://cdn-icons-png.freepik.com/256/14024/14024658.png?semt=ais_hybrid" />
    </div>
    <div class= "mt-3">
      <%= @user.username %>
    </div>
    <div class= "mt-3">
      <%= @user.age %>
    </div>
    <div class= "mt-3">
      <%= @user.location %>
    </div>
    <div class= "mt-3">
      <%= @user.bio %>
    </div>
    <div class= "container mt-3">
      <%= link_to 'Edit Profile', edit_user_path(@user) %>
    </div>
    <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
  </div>
</div>
