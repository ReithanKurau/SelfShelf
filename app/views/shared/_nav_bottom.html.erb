<% if user_signed_in? %>
  <div class="container-fluid bottom-nav d-flex justify-content-around">
    <%= link_to user_shelf_interests_path(current_user), class: 'btn btn-info rounded-circle', role: "button" do %>
      <i class="fa-solid fa-book"></i>
    <% end %>
    <%= link_to users_path, class: 'btn btn-info rounded-circle', role: "button" do %>
      <i class="fa-solid fa-users"></i>
    <% end %>
    <%= link_to interests_path, class: 'btn btn-info rounded-circle', role: "button" do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
    <%= link_to user_path(current_user), class: 'avatar' do %>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key , class: "avatar" %>
      <% else %>
        <%= image_tag "" , class: "avatar" %>
      <% end %>
    <% end %>
  </div>
<% end %>
