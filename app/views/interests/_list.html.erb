<div data-search-target="results">
  <div class="interests">
    <% if books.nil? && movies.nil? %>
      <div class="cards">
        <% interests.each do |interest| %>
          <%= render 'interest_card', interest: interest, shelf_interest: shelf_interest %>
        <% end %>
      </div>
    <% else %>
      <h2>Books</h2>
      <% if params[:query].blank? %>
        <h6 class="h3"><%= pluralize books.count, 'result' %> available</h6>
      <% else %>
        <h6 class="h3"><%= pluralize books.count, 'result' %> for <code><%= params[:query] %></code></h6>
      <% end %>
      <div class="cards">
        <% books.each do |interest| %>
          <%= render 'interest_card', interest: interest, shelf_interest: shelf_interest %>
        <% end %>
      </div>
      <h2 class="mt-5">Movies</h2>
      <% if params[:query].blank? %>
        <h6 class="h3"><%= pluralize movies.count, 'result' %> available</h6>
      <% else %>
        <h6 class="h3"><%= pluralize movies.count, 'result' %> for <code><%= params[:query] %></code></h6>
      <% end %>
      <div class="cards">
        <% movies.each do |interest| %>
          <%= render 'interest_card', interest: interest, shelf_interest: shelf_interest %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
