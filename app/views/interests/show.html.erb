<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<div class="container">
  <div class="p-1">
    <div class="p-1 d-flex w-100 justify-content-around">
      <%= simple_form_for [@shelf_interest] do |f| %>
        <%  unless current_user.shelf_interests.exists?(interest_id: @interest.id) %>
          <%= f.input :interest_id, as: :hidden, input_html: { value: @interest.id } %>
          <button type="submit" class="star-rating">
            <i class="fa-solid fa-plus fa-2xs"></i>
          </button>
        <% end %>
      <% end %>
      <button type="submit" class="star-rating"><i class="fas fa-star"></i></button>
    </div>
    <h1 class="m-1 p-1"><%= @interest.title %></h1>
    <div class="cover">
      <% if @interest.photo.attached? %>
        <%= cl_image_tag @interest.photo.key, class: "w-100" %>
      <% else %>
        <%= image_tag 'no_cover.gif', class: "w-100" %>
      <% end %>
    </div>
    <div class="shelf_interest-details">
      <p class="fw-semibold"><i class="fa-solid fa-user"></i> <%= @interest.creator %></p>
      <p class="fw-semibold"><i class="fa-solid fa-calendar-days"></i> <%= @interest.publishing_year %></p>
      <span class="badge rounded-pill text-bg-secondary"> <%= @interest.genre %></span>
    </div>
    <div class="summary m-1 p-1">
      <p> <%= @interest.description %> </p>
    </div>
  </div>
