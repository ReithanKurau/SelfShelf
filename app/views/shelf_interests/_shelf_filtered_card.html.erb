<div class="card-simple">
  <%= link_to "",  user_shelf_interest_path(shelf_interest.user, shelf_interest), class: "card-item-link" %>
  <img alt=""
      class="card-simple-image"
      src="<%= shelf_interest.interest.photo.attached? ? cl_image_path(shelf_interest.interest.photo.key) : image_path(shelf_interest.interest.cover) %>"/>
  <div class="card-simple-text">
    <div class= "interest-title">
      <p><%= shelf_interest.interest.title %></p>
    </div>
  </div>
  <% if shelf_interest.user == current_user %>
    <%= link_to shelf_interest_path(shelf_interest), data: {turbo_method: :delete}, class: "delete-btn" do %>
      <i class="fa-solid fa-xmark"></i>
    <% end %>
    <div>
      <% if shelf_interest.user.favorited?(shelf_interest) %>
        <%= link_to unfavorite_shelf_interest_path(shelf_interest), class: "star-btn" do %>
          <i class="fa-solid fa-star"></i>
        <% end %>
      <% else %>
        <%= link_to favorite_shelf_interest_path(shelf_interest), class: "star-btn" do %>
          <i class="fa-regular fa-star"></i>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div>
      <% if shelf_interest.user.favorited?(shelf_interest) %>
        <div class="star-btn">
          <i class="fa-solid fa-star"></i>
        </div>
      <% else %>
        <div class="star-btn">
          <i class="fa-regular fa-star star-btn"></i>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
